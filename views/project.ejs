<%- include("partials/header") %>

<div class="container mx-auto max-w-4xl mt-20 px-6">

    <!-- Title -->
    <h1 class="text-4xl font-bold text-center mb-6">
        <%= project.title %>
    </h1>

    <p class="text-center text-gray-600 mb-10">
        Below, you will find detailed information about this project.
    </p>

    <!-- Project Image -->
    <img 
        src="<%= project.featuredimage %>" 
        alt="<%= project.title %>" 
        class="w-full rounded-xl shadow-lg mb-12"
    >

    <!-- Info Section -->
    <div class="bg-white shadow-md rounded-xl p-8 space-y-6">

        <!-- Sector -->
        <div>
            <h3 class="font-bold text-lg">Sector:</h3>
            <p class="text-gray-700"><%= project.sector %></p>
        </div>

        <!-- Description -->
        <div>
            <h3 class="font-bold text-lg">Description:</h3>
            <p class="text-gray-700 leading-relaxed">
                <%= project.description %>
            </p>
        </div>

        <!-- Published -->
        <div>
            <h3 class="font-bold text-lg">Published:</h3>
            <p class="text-gray-700">
                <%= project.published ? "Yes" : "No" %>
            </p>
        </div>

        <!-- Learn More -->
        <div class="text-center mt-10">
            <a 
                href="<%= project.original_source_url %>" 
                target="_blank"
                class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition">
                Learn More
            </a>
        </div>

    </div>

    <!-- Back Button -->
    <div class="text-center mt-12">
        <a 
            href="/solutions/projects"
            class="px-6 py-3 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition">
            ‚Üê Back to Projects
        </a>
    </div>

</div>

<%- include("partials/footer") %>

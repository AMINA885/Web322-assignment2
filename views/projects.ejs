<%- include("partials/header") %>

<div class="container mx-auto py-16 px-4">
  <h1 class="text-4xl font-bold mb-10 text-center">Climate Solutions Projects</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
    <% projects.forEach(p => { %>
      <div class="shadow-lg rounded-xl overflow-hidden bg-white">
        <img src="<%= p.featuredimage %>" class="w-full h-56 object-cover" alt="<%= p.title %>">
        <div class="p-6">
          <h2 class="text-2xl font-semibold mb-2"><%= p.title %></h2>
          <p class="text-gray-600 mb-4"><strong>Sector:</strong> <%= p.sector %></p>

          <a href="/solutions/projects/<%= p.id %>"
             class="px-5 py-2 bg-pink-500 text-white rounded-lg">
             Details
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
